# Flask configuration
FLASK_ENV=development
FLASK_DEBUG=1

# Database URL
# For SQLite (local development):
# DATABASE_URL=sqlite:///warehouse.db
# For PostgreSQL (docker-compose):
DATABASE_URL=postgresql://warehouse:warehouse@db:5432/warehouse

# Secret key for session management and CSRF protection
# Generate a secure key for production: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-in-production

# Optional: Redis URL for caching
# REDIS_URL=redis://redis:6379/0
